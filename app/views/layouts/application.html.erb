<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
  <div id="wrapper">
  		<%= render 'layouts/header' %>
      <section class="round"> 
        <h1><%= @title%></h1>       
        <%= yield %>
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}") %>
          <% end %> 
      </section>
       <%= debug(params) if Rails.env.development? %>
   </div>
  </body>
</html>
