<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
	<nav>
		<%= render 'layouts/header' %>
	</nav>
	      <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %> 
    <%= yield %>
     <%= debug(params) if Rails.env.development? %>
  </body>
</html>
